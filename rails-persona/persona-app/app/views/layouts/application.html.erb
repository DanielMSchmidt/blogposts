<!DOCTYPE html>
<html>
<head>
  <title>PersonaApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="small-11 small-centered columns">
    <nav class="top-bar">
      <ul class="title-area">
        <li class="name">
          <h1><a href="#">Persona </a></h1>
        </li>
      </ul>
      <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li class="active"><a id="login" href="#">Login</a></li>
            <li class="active"><a id="logout" href="#">Logout</a></li>
            <li class="divider"></li>
          </ul>
      </section>
    </nav>
    <div class="small-11 small-centered column">
        <%= yield %>
    </div>
</div>
<script src="https://login.persona.org/include.js"></script>
<script>
    var signinLink = document.getElementById('login');
    if (signinLink) {
      signinLink.onclick = function() { navigator.id.request(); };
    }

    var signoutLink = document.getElementById('logout');
    if (signoutLink) {
      signoutLink.onclick = function() { navigator.id.logout(); };
    }
</script>
</body>
</html>
